<section style="background: #151515;">
    <div class="container vh-100">
        <div class="row">
            <div class="col-md-6 col-md-12 mt-5">
                <table class="table table-dark table-striped border-dark" id="adminProductsTable" style="background: #151515;">
                    <thead class="t-head text-center ad-tableHead">
                        <tr>
                            <th class="text-white" scope="col">NAME</th>
                            <th class="text-white" scope="col">EMAIL</th>
                            <th class="text-white" scope="col">PHONE</th>
                            <th class="text-white" scope="col">BLOCK USER</th>
                            

                            
                        </tr>
                    </thead>
                    <tbody class="t-body">
                        {{#each Users}}
                        <tr class="ad-tableContents">

                            <td class="text-center text-white table-data">{{this.name}}</td>
                            <td class="text-center text-white table-data">{{this.email}}</td>
                            <td class="text-center text-white table-data">{{this.phone}}</td>
                            {{!-- <td class="text-center text-white table-data"><a href="/admin/edit-user/{{this._id}}" class="btn btn-success btn-sm"
                                    style="font-size: smaller;"><i class="bi bi-pencil-square"></i>EDIT</a></td> --}}
                            <td class="text-center text-white table-data"><a href="/admin/admin-blockeduser/{{this._id}}" class="btn btn-danger btn-sm"
                                    style="font-size: smaller; background: #f36100;"
                                    onclick="return confirm('Do you want to block this user {{this.name}} ?')"><i
                                class="bi bi-person-x-fill"></i>BLOCK</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>   
            </div>
        </div>
        <a href="/admin/admin-view-blockedusers" class="btn btn-danger text-white mt-4" style="background: #f36100;">VIEW BLOCKED USERS</a>
    </div>
</section>