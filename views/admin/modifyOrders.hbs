<section style="background: #151515;">
    <div class="container ">
        <form action="/admin/modifyOrders" method="post" enctype="multipart/form-data" id="checkout-form">
            <div class="row">
                <div class="col-md-12" style="color: #c4c4c4;">

                    <h4 style="color: #c4c4c4; font-weight: bold;" class="text-center mt-5 mb-3">User Orders
                    </h4>
                    <div class="form-group">
                        {{!-- <input type="text" name="userId" id="" value="{{user._id}}" hidden> --}}
                        <label for="inputEmail4">Name</label>
                        <input style="background: #151515; border-radius: 0%;" type="text" class="form-control"
                            name="name" placeholder="Name" value="{{modifyOrders.deliveryDetails.name}}" required>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword4">Address</label>
                        <input style="background: #151515; border-radius: 0%;" type="text" class="form-control"
                            name="address" placeholder="1234 Main St" value="{{modifyOrders.deliveryDetails.address}}"
                            required>
                    </div>
                    {{!--
                </div> --}}
                <div class="form-group">
                    <label for="inputAddress">Contact</label>
                    <input style="background: #151515; border-radius: 0%;" type="number" class="form-control"
                        name="phone" placeholder="Contact number" value="{{modifyOrders.deliveryDetails.phone}}"
                        required>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputCity">City</label>
                        <input style="background: #151515; border-radius: 0%;" type="text" class="form-control"
                            name="city" placeholder="City" value="{{modifyOrders.deliveryDetails.city}}" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputState">State</label>
                        <select style="background: #151515; border-radius: 0%;" name="state" class="form-control"
                            required>
                            <option>{{modifyOrders.deliveryDetails.state}}</option>
                            <option>Kerala</option>
                            <option>Tamil Nadu</option>
                            <option>Karnataka</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputZip">Pincode</label>
                        <input style="background: #151515; border-radius: 0%;" type="number" class="form-control"
                            name="pincode" placeholder="Pincode" value="{{modifyOrders.deliveryDetails.pincode}}"
                            required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputZip">Amount</label>
                        <input style="background: #151515; border-radius: 0%;" type="number" class="form-control"
                            name="totalAmount" placeholder="Total Amount" value="{{modifyOrders.totalAmount}}" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputZip">Payment</label>
                        <input style="background: #151515; border-radius: 0%;" type="text" class="form-control"
                            name="PaymentMethod" placeholder="Payment Method" value="{{modifyOrders.paymentMethod}}"
                            required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputZip">Status</label>
                        <input style="background: #151515; border-radius: 0%;" type="text" class="form-control"
                            name="status" placeholder="Status" value="{{modifyOrders.status}}" required>
                    </div>

                </div>

                <div class="form-group col-md-6 mt-5 pl-0">
                    <button hidden id="newAddress" class="btn btn-danger mt-3 mb-4" type=""></i>Save</button>
                </div>
                <div class="form-group col-md-6 mt-5 pl-0">
                    <a href="/admin/modifyOrders/{{modifyOrders._id}}" id="newAddress" class="btn btn-danger mt-3 mb-4" type=""></i>Save</a>
                </div>
            </div>

    </div>
    </form>
    </div>

</section>