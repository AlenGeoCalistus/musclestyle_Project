<section class="contact-section spad">
    <div class="container mb-5 p-5">
        <div class="row border">
            <div class="col-lg-6 mt-5 text-center mx-auto mb-5">
                <div class="section-title contact-title text-center">
                    <span>This action will add a new product ! </span>
                    <h2>Add product</h2>
                    <div class="leave-comment mt-5 text-center mb-5">
                        <div class="section-title">
                            <form action="/admin/admin-addproduct" method="post" enctype="multipart/form-data">
                                <div style="text-align: start;">
                                    <span>Brand</span>
                                    <input type="text" name="brand" placeholder="Brand" />
                                    <span>Name</span>
                                    <input type="text" name="name" placeholder="Name" />
                                    <span style="display: block;">Category</span>
                                    <select style="background: #151515; color: #c4c4c4; font-size: 15px; width: 20.8rem; height: 2rem;" name="category" id="">
                                        <option value="Choose">Choose...</option>
                                        <option value="Protein Powder">Protein Powder</option>
                                        <option value="Crossfit Classes">Crossfit Classes</option>
                                    </select>
                                    <br>
                                    <br>
                                    <span>Description</span>
                                    <input type="text" name="discription" placeholder="Discription" />
                                    <span>Price</span>
                                    <input type="number" name="price" placeholder="Price" />
                                    {{!-- <span>Discount</span>
                                    <input type="number" name="discount" placeholder="Discount %" /> --}}
                                    <span>Image</span>
                                    <input type="file" name="image" class="form-control" onchange="viewImage(event)">

                                    <button type="submit">Submit</button> 
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
</section>