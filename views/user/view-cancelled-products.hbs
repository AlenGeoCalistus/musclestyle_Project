<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Cancelled Products</h2>
                    <div class="bt-option">
                        <a href="#">Home</a>
                        <a href="#">User</a>
                        <span>Cancelled Products</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<section style="background: #151515;">
    <div class="container-fluid">
        <div class="row">
            {{#each products}}
            <div class="col-md-4  mt-5">
                <div class="card" style="width: 15rem; height: 25rem; color: #151515;"> 
                    <img class="card-img-top" src="/product-images/{{this.product._id}}.jpg" alt="card image cap"
                        style="height: 12rem;">
                    <div class="card-body" style="background: #151515;">
                        <h5 style="color: #a9a9a9;" class="card-title">{{this.product.brand}}</h5>
                        <p class="card-text"><i class="fas fa-rupee-sign"></i>{{this.product.price}}</p>
                        <p class="card-text">Quantity - {{this.quantity}}</p>
                        <p class="card-text">{{this.product.discription}}</p>
                        <a href="/detailed-view"
                            class="primary-btn btn-normal appoinment-btn">Go Back</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>