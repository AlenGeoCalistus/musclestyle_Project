<section style="background: #151515;">
    <div class="container">
        <form action="/update-password" method="post" id="checkout-form">
            <div class="row">
                <div class="col-md-12" style="color: #c4c4c4;">

                    <h4 style="color: #c4c4c4; font-weight: bold;" class="text-center mt-5 mb-3">Change Password
                    </h4>
                    <div class="form-group">
                        <input type="text" name="userId" id="" value="{{user._id}}" hidden>
                        <input style="background: #151515; border-radius: 0%;" type="text" class="form-control"
                            name="oldpassword" placeholder="Old Password" required>
                        <br>
                        <br>
                        <div class="form-group">
                            <input style="background: #151515; border-radius: 0%;" type="text" class="form-control"
                                name="newpassword" placeholder="New Password" required>
                        </div>
                    </div>


                    <div class="form-group text-center col-md-12 mt-5 pl-0">
                        <button id="newAddress" class="btn btn-danger mt-3 mb-4"
                            type="submit">Submit</button>
                    </div>
                    <div class="text-center mb-5">
                        <a href="/update-passwordOTP"><span
                                style="text-transform: none; color: #f36100; font-weight: 700;font-size: 16px;">Reset Password With OTP ?</span></a>
                    </div>
                </div>

            </div>

        </form>
    </div>

</section>