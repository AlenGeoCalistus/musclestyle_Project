<section class="pt-5 pt-5" style="background:#151515 ;">
  <h2 class="text-white text-center">EDIT PROFILE</h2>
  <div class="container border " style="background: #151515;">
    <div class="main-body " style="background:  #151515;">
      <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body" style="background: #151515;">
              <div class="d-flex flex-column align-items-center text-center">

                {{#if user._id}}
                <img src="/user-profilePic/{{user._id}}.jpg" alt="Admin" class="rounded-circle" width="150"
                  style="background: #fff;">
                {{else}}
                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle"
                  width="150" style="background: #fff;">
                {{/if}}
                <div class="mt-3">
                  <h4 class="text-white">{{user.name}}</h4>
                  <p class="text-secondary mb-1">{{user.email}}</p>
                  <p class="text-muted font-size-sm">{{user.phone}}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="leave-comment text-center mb-5">
          <div class="section-title">
            <form action="/user-editProfile/{{user._id}}" method="post" enctype="multipart/form-data">
              {{#if loginErr}}
              <span>{{loginErr}}</span>
              {{/if}}
              <div style="text-align: start;">
                <span style="marign">Name</span>
                <input type="text" name="name" id="name" value="{{user.name}}">
                <span>Email</span>
                <input type="email" name="email" id="email" value="{{user.email}}">
                <span>Phone</span>
                <input type="number" name="phone" id="phone" value="{{user.phone}}">
                <span>Address</span>
                <input type="text" name="address" id="address" value="{{user.address}}">
                <span>City</span>
                <input type="text" name="city" id="city" value="{{user.city}}">
                <span>State</span>
                <select style="font-size: 13px;
    color: #c4c4c4;
    width: 100%;
    height: 46px;
    border: 1px solid #363636;
    border-radius :0%;
    padding-left: 20px;
    padding-right: 5px;
    background: transparent;
    margin-bottom: 20px;" name="state" required>
                  <option>{{user.state}}</option>
                  <option>Kerala</option>
                  <option>Tamil Nadu</option>
                  <option>Karnataka</option>
                </select>
                <span>Pincode</span>
                <input type="number" name="pincode" id="pincode" value="{{user.pincode}}">
                <span>Gender</span>
                {{!-- <input type="text" name="gender" id="gender" value="{{user.gender}}"> --}}
                <select style="font-size: 13px;
    color: #c4c4c4;
    width: 100%;
    height: 46px;
    border: 1px solid #363636;
    border-radius :0%;
    padding-left: 20px;
    padding-right: 5px;
    background: transparent;
    margin-bottom: 20px;" name="gender" required>
                  <option>{{user.gender}}</option>
                  <option>Male</option>
                  <option>Female</option>
                  <option>Other</option>
                </select>
                <input type="file" name="image" id="image" onchange="viewImage(event)">
                <button type="submit">Save</button>
                <br>
                <br>
              </div>
              <a href="/update-password"><span style="text-transform: none;">Update or Reset Password ? </span></a>
          </div>
        </div>
        </form>
      </div>
    </div>
  </div>
  </div>

  </div>
  </div>

  </div>
  </div>

</section>

