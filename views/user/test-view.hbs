<section class="services-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title mt-5">
                    <span>Protein Powders</span>
                    <h2>Detailed Description</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="row ">
        <div class="col-md-6 order-lg-1 col-md-6 p-0 ">
            {{#each products}}
            <div class="border ss-pic ml-2" style="width: 18rem;">
                <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="...">
                <div id="ss-textmod" class="card-body cart&view text-start team-title ml-2 pt-3">
                    <h4 class="card-title">{{this.brand}}</h4>
                    <h4>{{this.name}}</h4>
                    <p>{{this.category}}</p>
                    <p>{{this.discription}}</p>
                    <p><i class="fas fa-rupee-sign card-text "></i>{{ this.price}}</p>
                    {{#if this.offer}}
                    <span>
                        <p class="card-text text-white">{{this.discount}}%off</p>
                    </span>
                    {{/if}}
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</section>